@model BugTrackerDemo.Models.ViewModels.AssignPMViewModel

@{
    ViewData["Title"] = "Assign PM";
}

<h1>Project: @Model.Project.Name</h1>

<h4>Assign Project Manager</h4>


<div class="container">
    <hr />
    <div class="row mt-2">
        <div class="col-md-8 offset-md-2 rounded shadow bg-white mt-2">
            <form method="post" asp-action="AssignPM" asp-controller="Projects">
                <input hidden asp-for="Project.Id" />
                <h2>@Model.Project.Name</h2>
                <p>@Model.Project.Description</p>

                <div class="form-group">
                    <label class="control-label">Select Project Manager</label>
                    <select asp-for="PMId" required class="form-control" asp-items="@Model.PMList">
                        <option></option>
                    </select>
                    <br />
                    <input type="submit" value="Assign" class="btn btn-primary" />
                     <a asp-action="UnassignedProjects" class="btn btn-secondary"> Back to List</a>
                </div>

            </form>

        </div>
    </div>
</div>


